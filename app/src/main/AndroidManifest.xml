<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.SEND_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartCage"
        tools:targetApi="31">
        <activity
            android:name=".views.sensors.SoundScreen"
            android:exported="false" />
        <activity
            android:name=".views.sensors.GasScreen"
            android:exported="false" />
        <activity
            android:name=".views.sensors.PresencyScreen"
            android:exported="false" />
        android:name=".views.fragments.CageFragment" />
        <activity
            android:name=".views.sensors.TempScreen"
            android:exported="false" />
        <activity
            android:name=".views.sensors.FoodScreen"
            android:exported="false" />
        <activity
            android:name=".views.sensors.WaterScreen"
            android:exported="false" />
        <activity
            android:name=".views.NewAccount"
            android:exported="false" />
        <activity
            android:name=".views.RegisteredAccount"
            android:exported="false" />
        <activity
            android:name=".views.Login"
            android:exported="false" />
        <activity
            android:name=".views.Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.MainActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.SmartCage" />
    </application>

</manifest>